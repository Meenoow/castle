<h1>Welcome <%= @username %></h1>

<div class="container">
  <h3>Checklist</h3>
  <% items = ["Item 1", "Item 2", "Item 3"] %>
  <% items.each do |item| %>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="<%= item %>" id="<%= item.downcase %>">
      <label class="form-check-label" for="<%= item.downcase %>">
        <%= item %>
      </label>
    </div>
  <% end %>
</div>

<button>
  Add new task
</button>
