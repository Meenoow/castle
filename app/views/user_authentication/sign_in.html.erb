<h1>Sign in</h1>

<form action="/user_verify_credentials" method="post">
  <input id="role_box" name="query_role" value="<%= @role || "student" %>" type="hidden">
  <% if @role == "teacher" %>
    <div>
      <label for="email_box">Email</label>
      <input id="email_box" name="query_email" placeholder="Enter your email..." type="text">
    </div>
  <% elsif @role == "student" %>
    <div>
      <label for="username_box">Username</label>
      <input id="username_box" name="query_username" placeholder="Enter your username..." type="text">
    </div>
  <% end %>
  <div>

    <label for="password_box">Password</label>
    <input id="password_box" name="query_password" placeholder="Enter your password..." type="password">
  </div>

  <button>
    <a href="/teacher_todos">Sign in</a>
  </button>
</form>

<hr>

<p>
  Or, <a href="/user_sign_up">Sign up</a> instead.
</p>
